#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
float kms,meters,feet,inches,centimeters;
    scanf("%f",&kms);
    meters=kms*1000;
    feet=kms*3280.84;
    inches=kms*39370.1;
    centimeters=kms*100000;
    printf("%.2f m\n",meters);
    printf("%.2f ft\n",feet);
    printf("%.2f in\n",inches);
    printf("%.2f cm",centimeters);
    
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
